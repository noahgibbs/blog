<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :tag_list %> <br />
    <%= f.text_field :tag_list %>
  </p>

  <p>
    <%= f.submit submit_text %>
  </p>
<% end %>
