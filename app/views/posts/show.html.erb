<div class="content">

<%= render :partial => @post %>

<p>
  <% if @prevpost %>
  Previous: <%= link_to h(@prevpost.title), :action => "show",
                                            :id => @prevpost %> /
  <% end; if @nextpost %>
  Next: <%= link_to h(@nextpost.title), :action => "show",
                                            :id => @nextpost %>
  <% end %>
</p>

<p>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Destroy', @post, :method => :delete, :confirm => "Are you sure?" %> |
  <%= link_to 'See All Posts', posts_path %>
</p>

