<% div_for post do %>
  <h2> <%= link_to_unless_current h(post.title), :action => "show", :id => post %></h2>
  <p> <span class="createdTime"> Created: <%= post.created_at %> </span> /
      <span class="updatedTime"> Updated: <%= post.updated_at %> </span> </p>

  <%= simple_format post.body %>

  <div class="post_footer">
  <%= @commentlink ? link_to("View Comments", :action => "show",
                                               :id => post,
                                        :anchor => "disqus_thread") : "" %>
  <%= html_for_tag_div(post) %>
  </div>

<% end %>
